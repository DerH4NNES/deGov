{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
 #}
{% set media_classes = [
  'image',
  'media--search',
  'clearfix',
] %}
<article{{ attributes.addClass(media_classes) }}>
  {{ content.contextual_links }}
  <div class="media--search__type-text">{{ 'Bild'|t }}</div>
  <div class="image__image"{{ content.image|quickedit_attr }}>{{ content.image|field_value }}</div>
  <div class="media--search__info">
      {% if content.field_image_date|field_value %}
        <span class="image__date"{{ content.field_image_date|quickedit_attr }}>{{ content.field_image_date|field_value }}</span>
      {% endif %}
        <span class="media--search__caption"{{ content.field_image_caption|quickedit_attr }}>{{ content.field_image_caption|field_value }}</span>
      {% if content.field_copyright|field_value %}
        <span class="media--search__copyright">
          <span class="media--search__copyright-label"{{ content.field_copyright|quickedit_attr }}>{{ '&copy;'|trans }}</span>
            {{ content.field_copyright|field_value }}
        </span>
      {% endif %}
  </div>
    {% if content.field_tags|field_value %}
        <div class="tags"{{ content.field_tags|quickedit_attr }}>{{ content.field_tags|field_value }}</div>
    {% endif %}
</article>
