{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
 #}
{% set media_classes = [
  'image',
  'media--preview',
  'clearfix',
] %}
<article{{ attributes.addClass(media_classes) }}>
  {{ content.contextual_links }}
  <div class="media--preview__image-block col-xs-12 col-sm-6 no-padding">
    <div class="media--preview__type-text">{{ 'Bild'|t }}</div>
    <div class="image__image teaser-image"{{ content.image|quickedit_attr }}>{{ content.image|field_value }}</div>
    <div class="media--preview__info">
      <span class="media--preview__caption"{{ content.field_image_caption|quickedit_attr }}>{{ content.field_image_caption|field_value }}</span>
      {% if content.field_image_copyright|field_value %}
        <span class="media--preview__copyright">
          <span class="media--preview__copyright-label"{{ content.field_image_copyright|quickedit_attr }}>{{ '&copy;'|trans }}</span>
            {{ content.field_image_copyright|field_value }}
        </span>
      {% endif %}
    </div>
  </div>
  <div class="media--preview__text-block col-xs-12 col-sm-6">
    {% if content.field_image_date|field_value %}
        <div class="image__date"{{ content.field_image_date|quickedit_attr }}>{{ content.field_image_date|field_value }}</div>
    {% endif %}
    {% if content.field_image_description|field_value %}
      {% set text = content.field_image_description|render|striptags %}
      <div class="image_description">{{ text|length > 200 ? text|slice(0, 200) ~ '...' : text }}</div>
    {% endif %}
    {% if content.field_tags|field_value %}
        <div class="tags"{{ content.field_tags|quickedit_attr }}>{{ content.field_tags|field_value }}</div>
    {% endif %}
  </div>
</article>
