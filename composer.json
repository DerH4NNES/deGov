{
    "name": "deGov/deGov",
    "description": "Drupal 8 for Government (Drupal 8 für die öffentliche Verwaltung)",
    "type": "project",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "drupal/drupal-extension": "^3.2",
        "behat/mink": "~1.7",
        "behat/mink-goutte-driver": "~1.2",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "drupal/coder": "8.*",
        "mikey179/vfsStream": "~1.2",
        "phpunit/phpunit": "~4.8",
        "symfony/css-selector": "~2.8",
        "behat/behat": "^3.0",
        "se/selenium-server-standalone": "^2.53",
        "composer/composer": "^1.3"
    },
    "require": {
        "composer/installers": "^1.0",
        "drupal-composer/drupal-scaffold": "^2.0.0",
        "cweagans/composer-patches": "^1.6.0",
        "acquia/lightning": "~2.1.0",
        "mnsami/composer-custom-directory-installer": "^1.0",
        "drupal/bootstrap": "^3.3",
        "drupal/eu_cookie_compliance": "^1.0@beta",
        "drupal/simple_sitemap": "^2.9",
        "drupal/simple_gmap": "^1.2",
        "drupal/easy_breadcrumb": "^1.6",
        "drupal/piwik": "^1.1",
        "drupal/open_readspeaker": "^1.3",
        "drupal/twitter_block": "^2.1",
        "drupal/entity_reference_revisions": "^1.2",
        "drupal/paragraphs": "^1.1",
        "drupal/admin_toolbar": "^1.19",
        "drupal/password_policy": "^3.0@alpha",
        "drupal/sitemap": "^1.3",
        "drupal/shariff": "^1.1",
        "drupal/views_database_connector": "^1.0",
        "drupal/search404": "^1.0@beta",
        "drupal/elasticsearch_connector": "5.x-dev",
        "drupal/viewsreference": "^1.0@alpha",
        "drupal/simplenews": "^1.0@alpha",
        "drupal/ultimate_cron": "^2.0@alpha",
        "drupal/contact_storage": "^1.0@beta",
        "drupal/social_media_links": "^2.2",
        "drupal/spamspan": "1.x-dev",
        "drupal/content_access": "1.x-dev",
        "drupal/entity_browser": "^1.0@RC",
        "drupal/smtp": "^1.0@beta",
        "degov/features": "dev-master",
        "degov/modules": "dev-master",
        "degov/degov_theme": "dev-master"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "degovmodules": {
            "type": "package",
            "package": {
                "name": "degov/modules",
                "version": "master",
                "source": {
                    "url": "https://github.com/deGov/modules.git",
                    "type": "git",
                    "reference": "origin/master"
                }
            }
        },
        "degovfeatures": {
            "type": "package",
            "package": {
                "name": "degov/features",
                "version": "master",
                "source": {
                    "url": "https://github.com/deGov/features.git",
                    "type": "git",
                    "reference": "origin/master"
                }
            }
        },
        "degovtheme": {
            "type": "vcs",
            "url": "git@github.com:deGov/degov_theme.git"
        },
        "shariff": {
            "type": "package",
            "package": {
                "name": "heiseonline/shariff",
                "version": "master",
                "type": "drupal-library",
                "dist": {
                    "url": "https://github.com/heiseonline/shariff/archive/master.zip",
                    "type": "zip"
                }
            }
        }
    },
    "scripts": {
      "post-install-cmd": [
        "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
      ],
      "post-update-cmd": [
        "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
      ]
    },
    "config": {
        "bin-dir": "bin/"
    },
    "extra": {
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library"
            ],
            "./docroot/modules/degov/modules/": [
                "degov/modules"
            ],
            "./docroot/modules/degov/features/": [
                "degov/features"
            ]
        },
        "enable-patching": true
    }
}
