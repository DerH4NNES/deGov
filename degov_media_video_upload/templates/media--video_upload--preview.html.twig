{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{%
set media_classes = [
  'video-upload',
  'media--preview',
  'clearfix',
]
%}
<article{{ attributes.addClass(media_classes) }}>
  {{ content.contextual_links }}
  <div class="media--preview__image-block col-xs-12 col-sm-6 no-padding">
    <div class="media--preview__type-text">{{ 'Video'|t }}</div>
      {% if content.field_video_upload_preview|field_value %}
          <div class="video-upload__video teaser-image"{{ content.field_video_upload_preview|quickedit_attr }}>{{ content.field_video_upload_preview|field_value }}</div>
      {% else %}
          <a href="{{ video_url }}"><div class="media--preview__dummy"></div></a>
      {% endif %}
      {% if content.field_video_upload_caption|field_value or content.field_copyright|field_value %}
      <div class="media--preview__info">
        {% if content.field_video_upload_caption|field_value %}
          <span class="media--preview__caption"{{ content.field_video_upload_caption|quickedit_attr }}>{{ content.field_video_upload_caption|field_value }}</span>
        {% endif %}
        {% if content.field_copyright|field_value %}
          <span class="media--preview__copyright">
            <span class="media--preview__copyright-label"{{ content.field_copyright|quickedit_attr }}>{{ '&copy;'|trans }}</span>
            {{ content.field_copyright|field_value }}
          </span>
        {% endif %}
      </div>
    {% endif %}
  </div>
  <div class="media--preview__text-block col-xs-12 col-sm-6">
    {% if content.field_description|field_value %}
      <div class="media--preview__description"{{ content.field_description|quickedit_attr }}>{{ content.field_description|field_value }}</div>
    {% endif %}
    {% if content.field_tags|field_value %}
      <div class="tags"{{ content.field_tags|quickedit_attr }}>{{ content.field_tags|field_value }}</div>
    {% endif %}
  </div>
</article>
