{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{%
set media_classes = [
  'video-upload',
  'media--search',
  'clearfix',
]
%}
<article{{ attributes.addClass(media_classes) }}>
  {{ content.contextual_links }}
  <div class="media--search__type-text">{{ 'Video'|t }}</div>
    {% if content.field_video_upload_preview|field_value %}
        <div class="video-upload__video"{{ content.field_video_upload_preview|quickedit_attr }}>{{ content.field_video_upload_preview|field_value }}</div>
    {% else %}
        <a href="{{ video_url }}"><div class="media--search__dummy"></div></a>
    {% endif %}
  {% if content.field_video_upload_caption|field_value or content.field_video_upload_copyright|field_value %}
    <div class="media--search__info">
      {% if content.field_video_upload_caption|field_value %}
        <span class="media--search__caption"{{ content.field_video_upload_caption|quickedit_attr }}>{{ content.field_video_upload_caption|field_value }}</span>
      {% endif %}
      {% if content.field_video_upload_copyright|field_value %}
        <span class="media--search__copyright">
          <span class="media--search__copyright-label"{{ content.field_video_upload_copyright|quickedit_attr }}>{{ '&copy;'|trans }}</span>
          {{ content.field_video_upload_copyright|field_value }}
        </span>
      {% endif %}
    </div>
  {% endif %}
  {% if content.field_tags|field_value %}
    <div class="tags"{{ content.field_tags|quickedit_attr }}>{{ content.field_tags|field_value }}</div>
  {% endif %}
</article>
